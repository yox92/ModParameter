{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": "src",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es6",
    "paths": {
      "@spt-server/*": ["external/SPT-Server/project/src/*"]
    }
  },
  "include": [
    "src",
    "external/SPT-Server/project/src"
  ]
}